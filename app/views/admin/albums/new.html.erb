<%= form_with(model: @album, url: admin_albums_path, method: :post, multipart: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>
  <div class="field">
    <%= form.label :release_year %>
    <%= form.number_field :release_year %>
  </div>
  <div class="field">
    <%= form.label :cover_image %>
    <%= form.file_field :cover_image %>
  </div>
  <div class="field">
    <%= form.label :length %>
    <%= form.text_field :length %>
  </div>
  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>